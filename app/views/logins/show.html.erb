
  <div class="user">
    <%= form_tag("/login/authenticate", method: "post") do %>
    <fieldset class="login">
      <% if params["wrong"] === "true" %>
        <p>Entered a wrong Username or Password</p>
        <script type="text/javascript">
          $("body").css('background-image','url(http://x.annihil.us/u/prod/marvel/i/mg/e/00/539863578d212/background.jpg)');
        </script>
      <%end%>
      <%= label_tag(:username, "Enter Username:") %>
      <%= text_field_tag(:username) %><br>
      <%= label_tag(:password, "Enter Password:") %>
      <%= password_field_tag(:password) %><br>
      <%= submit_tag("Login") %><br>
  <a href="<%= new_login_path %>">New User</a>
    </fieldset>
    <% end %>
  </div>


